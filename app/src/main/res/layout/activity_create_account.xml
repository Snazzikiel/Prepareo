<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height = "match_parent"
    android:paddingLeft= "@dimen/activity_horizontal_margin"
    android:paddingRight = "@dimen/activity_horizontal_margin"
    android:paddingTop = "@dimen/activity_vertical_margin"
    android:paddingBottom = "@dimen/activity_vertical_margin"
    android:background="@drawable/background_nobar"
    tools:context = ".CreateAccount">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:minHeight="700dp"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/create_btn_Register"
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:layout_below="@+id/create_Password"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="24dp"

                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/textview_red_noborder"
                android:text="@string/create_button_continue"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.454"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/create_disclaimer"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/create_acc_firstName"
                android:layout_width="320dp"
                android:layout_height="64dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:ems="10"
                android:hint="@string/create_firstname_hint"
                android:inputType="text"
                android:paddingLeft="20sp"
                android:textSize="@dimen/form_font_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/create_acc_Birthday"
                android:layout_width="320dp"
                android:layout_height="64dp"
                android:layout_below="@+id/create_acc_Email"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:ems="10"
                android:gravity="center|left"
                android:hint="@string/create_birthday_hint"
                android:inputType="date"
                android:paddingLeft="20sp"
                android:textSize="@dimen/form_font_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/create_acc_Email" />

            <EditText
                android:id="@+id/create_acc_Email"
                android:layout_width="320dp"
                android:layout_height="64dp"
                android:layout_below="@+id/create_acc_firstName"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:ems="10"
                android:hint="@string/create_email_hint"
                android:inputType="textEmailAddress"
                android:paddingLeft="20sp"
                android:textSize="@dimen/form_font_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.518"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/create_acc_LastName" />

            <EditText
                android:id="@+id/create_acc_LastName"
                android:layout_width="320dp"
                android:layout_height="64dp"
                android:layout_below="@+id/create_acc_Birthday"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:ems="10"
                android:hint="@string/create_lastname_hint"
                android:inputType="textPostalAddress"
                android:paddingLeft="20sp"
                android:textSize="@dimen/form_font_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.518"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/create_acc_firstName" />

            <EditText
                android:id="@+id/create_Password"
                android:layout_width="320dp"
                android:layout_height="64dp"
                android:layout_below="@+id/create_acc_LastName"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:ems="10"
                android:hint="@string/create_password_hint1"
                android:inputType="textPassword"
                android:paddingLeft="20sp"
                android:textSize="@dimen/form_font_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/create_acc_Birthday" />

            <EditText
                android:id="@+id/create_Password2"
                android:layout_width="320dp"
                android:layout_height="64dp"
                android:layout_below="@+id/create_acc_LastName"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:ems="10"
                android:hint="@string/create_password_hint2"
                android:inputType="textPassword"
                android:paddingLeft="20sp"
                android:textSize="@dimen/form_font_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/create_Password" />

            <TextView
                android:id="@+id/create_disclaimer"
                android:layout_width="272dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:text="@string/create_disclaimer"
                android:textColor="@color/colorBlack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/create_Password2" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>