<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="horizontal|vertical"
    android:scrollbars="vertical"
    android:background="@drawable/background_nobar"
    android:id="@+id/notification_popUp_layout"
    >


    <EditText
        android:id="@+id/notification_Name"
        android:layout_width="320dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:ems="10"
        android:hint="@string/notification_name"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:textSize="@dimen/form_font_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notification_frequency"
        android:layout_width="320dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:ems="10"
        android:gravity="center|left"
        android:hint="@string/notification_frequency"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:textSize="@dimen/form_font_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notification_Name" />

    <TextView
        android:id="@+id/notification_endDate"
        android:layout_width="320dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:ems="10"
        android:gravity="center|left"
        android:hint="@string/notification_endDate"
        android:inputType="date"


        android:paddingLeft="20dp"
        android:textSize="@dimen/form_font_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notification_startDate" />

    <TextView
        android:id="@+id/notification_startDate"
        android:layout_width="320dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:ems="10"
        android:gravity="center|left"
        android:hint="@string/notification_startDate"
        android:inputType="date"


        android:paddingLeft="20dp"
        android:textSize="@dimen/form_font_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notification_frequency" />

    <EditText
        android:id="@+id/notification_msg"
        android:layout_width="318dp"
        android:layout_height="112dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:ems="10"
        android:gravity="top|left"
        android:hint="@string/notification_msg"
        android:inputType="text"


        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:textSize="@dimen/form_font_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notification_endDate" />

    <Button
        android:id="@+id/subjects_btn_save"
        android:layout_width="179dp"
        android:layout_height="75dp"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"

        android:layout_marginTop="24dp"
        android:background="@drawable/textview_green_noborder"
        android:text="@string/notification_btn_save"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notification_msg" />


</android.support.constraint.ConstraintLayout>