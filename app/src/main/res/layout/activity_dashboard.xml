<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height = "match_parent"
    android:paddingLeft= "@dimen/activity_horizontal_margin"
    android:paddingRight = "@dimen/activity_horizontal_margin"
    android:paddingTop = "@dimen/activity_vertical_margin"
    android:paddingBottom = "@dimen/activity_vertical_margin"
    android:background="@drawable/background_dashboard"
    tools:context = ".Dashboard">


    <Button
        android:id="@+id/button5"
        android:layout_width="150dp"
        android:layout_height="132dp"
        android:layout_below="@+id/dashboard_Title"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="209dp"
        android:layout_marginLeft="209dp"
        android:layout_marginTop="373dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:background="@color/colorRed"
        android:drawableTop="@drawable/notifications"
        android:text="Notifications"
        android:textColor="@color/colorWhite"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="128dp"
        android:layout_below="@+id/dashboard_Title"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="376dp"
        android:layout_marginEnd="203dp"
        android:layout_marginRight="203dp"
        android:background="@color/colorRed"
        android:drawableTop="@drawable/icon_statistics"
        android:text="Statistics"
        android:textColor="@color/colorWhite"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="126dp"
        android:layout_height="106dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/dashboard_Title"
        android:layout_width="181dp"
        android:layout_height="49dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="65dp"
        android:text="Dashboard"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/form_font_size_heading" />

    <Button
        android:id="@+id/button"
        android:layout_width="299dp"
        android:layout_height="101dp"
        android:layout_below="@+id/dashboard_Title"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="51dp"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:background="@color/colorRed"
        android:drawableLeft="@drawable/heart"
        android:text="Profile"
        android:textColor="@color/colorWhite"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="302dp"
        android:layout_height="102dp"
        android:layout_below="@+id/dashboard_Title"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="225dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:background="@color/colorRed"
        android:drawableLeft="@drawable/icon_subjects"
        android:text="Subjects"
        android:textColor="@color/colorWhite"
        android:textSize="24sp" />

</RelativeLayout>